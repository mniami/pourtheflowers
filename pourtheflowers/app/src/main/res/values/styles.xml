<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LabelTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/darker_gray</item>
        <item name="android:textSize">@dimen/labelTextSize</item>
    </style>
    <style name="DescriptionTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:padding">4dp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
        <item name="android:inputType">textMultiLine|textWebEditText</item>
        <item name="android:scrollbars">none</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textSize">@dimen/descriptionTextSize</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Form"></style>

    <style name="Form.EditTextView" parent="android:Widget.EditText">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:padding">4dp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
        <item name="android:inputType">textMultiLine|textWebEditText</item>
        <item name="android:scrollbars">none</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

</resources>
